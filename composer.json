{
  "name": "heatdigital/composer-patches",
  "version": "1.0.0",
  "description": "Provides a way to patch Composer packages. Based on the great cweagans/composer-patches.",
  "minimum-stability": "dev",
  "license": "BSD-3-Clause",
  "type": "composer-plugin",
  "extra": {
    "class": "HD\\ComposerPatches\\Patches"
  },
  "authors": [
    {
      "name": "Cameron Eagans",
      "email": "me@cweagans.net"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "composer-plugin-api": "^1.0 || ^2.0"
  },
  "require-dev": {
    "composer/composer": "~1.0 || ~2.0",
    "phpunit/phpunit": "~4.6"
  },
  "autoload": {
    "psr-4": {
      "cweagans\\Composer\\": "src",
      "HD\\ComposerPatches\\": "src-hd"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "cweagans\\Composer\\Tests\\": "tests",
      "HD\\ComposerPatches\\Tests\\": "tests-hd"
    }
  }
}
